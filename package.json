{
  "version": "0.0.1",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "migrate": "node ./node_modules/typeorm/cli.js migration:run",
    "dev": "npm run migrate && TZ='Europe/Amsterdam' node --inspect dist/index.js",
    "start": "node dist/index.js",
    "typeorm": "node ./node_modules/typeorm/cli.js",
    "test": "TZ='UTC' NODE_ENV=dev TESTING=true mocha --require ts-node/register --require source-map-support/register --full-trace --exit --inspect --recursive ./src/tests/**/*.test.ts",
    "coverage": "nyc npm run test"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/interfaces/*.ts",
      "src/migrations/*.ts",
      "src/tests/**/*.ts",
      "src/index.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/superagent": "^4.1.1",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "mocha": "^6.1.3",
    "nyc": "^14.1.1",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.13",
    "supertest": "^4.0.2",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.0.0-rc.2"
  },
  "dependencies": {
    "@types/config": "^0.0.34",
    "@types/escape-html": "^0.0.20",
    "@types/express": "4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/iban": "^0.0.30",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mysql": "^2.15.5",
    "@types/node": "^12.6.8",
    "@types/node-sass": "^4.11.0",
    "@types/nodemailer": "^6.2.0",
    "@types/passport": "1.0.0",
    "@types/pug": "^2.0.4",
    "@types/puppeteer": "^1.12.4",
    "@types/session-file-store": "^1.2.0",
    "@types/uuid": "^3.4.4",
    "@types/xlsx": "^0.0.36",
    "@types/yargs": "^13.0.0",
    "apollo-server-express": "^2.14.2",
    "bexio": "^0.7.1",
    "class-validator": "^0.9.1",
    "config": "^3.0.1",
    "escape-html": "^1.0.3",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "graphql": "^15.0.0",
    "iban": "^0.0.12",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mysql": "^2.16.0",
    "node-sass": "^4.12.0",
    "nodemailer": "^6.2.1",
    "passport": "^0.4.0",
    "passport-azure-ad-oauth2": "^0.0.4",
    "passport-mock-strategy": "^1.1.1",
    "reflect-metadata": "^0.1.12",
    "sepa-xml": "^0.5.0",
    "session-file-store": "^1.2.0",
    "tea-school": "^1.4.1",
    "typeorm": "^0.2.11",
