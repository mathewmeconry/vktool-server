{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/custom_typings"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}